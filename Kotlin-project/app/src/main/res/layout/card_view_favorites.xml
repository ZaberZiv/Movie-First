<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#373737"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cv_image_movie"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/cv_rating_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:alpha="0.8"
            android:background="#FF5722"
            android:gravity="center_horizontal|center_vertical"
            android:text="-"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cv_name_movie"
            style="@style/text_color_movie_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45dp"
            android:layout_toEndOf="@id/cv_image_movie"
            android:text="-"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cv_name_genre"
            style="@style/text_color_movie_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_name_movie"
            android:layout_toEndOf="@id/cv_image_movie"
            android:text="-"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cv_release_date"
            style="@style/text_color_movie_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_name_genre"
            android:layout_toEndOf="@id/cv_image_movie"
            android:text="-"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>